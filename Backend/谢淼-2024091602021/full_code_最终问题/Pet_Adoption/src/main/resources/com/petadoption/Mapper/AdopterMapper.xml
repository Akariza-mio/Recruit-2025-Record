<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petadoption.Mapper.AdopterMapper">
    <insert id="addAdopter" parameterType="com.petadoption.entities.Adopter">
        INSERT INTO adopter (name, phone,address,password)
        VALUES (#{name}, #{phone},#{address},#{password})
    </insert>
    <update id="updateAdopter" parameterType="com.petadoption.entities.Adopter">
        UPDATE adopter
        SET name = #{name}, phone = #{phone}, address = #{address}, password = #{password}
        WHERE id = #{id}
    </update>
    <select id="getAdopterById" parameterType="int" resultType="com.petadoption.entities.Adopter">
        SELECT * FROM adopter WHERE id = #{id}
    </select>
    <delete id="removeAdopter" parameterType="int">
        DELETE FROM adopter WHERE id = #{id}
    </delete>
    <select id="getAllAdopters" resultType="com.petadoption.entities.Adopter">
        SELECT * FROM adopter;
    </select>
</mapper>